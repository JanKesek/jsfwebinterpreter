pipeline {
    agent any
    tools {
        maven "maven"
        jdk 'JAVA 8'
    }

    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
                    steps {
                        sh 'mvn clean install'
                    }
        }
    }
    post {
            success {
                    emailext to: 'jakesek@wp.pl',
                        body: "BUILD OK! : ${env.BUILD_URL}",
                        recipientProviders: [brokenBuildSuspects()],
                        subject: "Failed build: ${currentBuild.fullDisplayName}"
                  }

        failure {
                emailext to: 'jakesek@wp.pl',
                    body: "Failed build: ${env.BUILD_URL}",
                    recipientProviders: [brokenBuildSuspects()],
                    subject: "Failed build: ${currentBuild.fullDisplayName}"
              }
   }
}